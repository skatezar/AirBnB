<div class="container">
  <div class="card">
    <%= form_for(@flat) do |f| %>
    <div>
      <%= f.label :name %>
      <%= f.text_field :name %>
    </div>
    <div>
      <%= f.label :address %>
      <%= f.text_field :address %>
    </div>
    <div>
      <%= f.label :description %>
      <%= f.text_field :description %>
    </div>
    <div>
      <%= f.label :price_per_night %>
      <%= f.number_field :price_per_night %>
    </div>
    <div>
      <%= f.label :number_of_guests %>
      <%= f.number_field :number_of_guests %>
    </div>
    <div class="d-flex justify-content-center">
      <%= f.submit %>
    </div>
  <% end %>

  </div>
</div>

